<ul style="
    width: 25rem;
    height: 20rem;
    text-align: justify;
    font-size: 1rem;
    padding: 0;
">
    <% @articles.each do |article| %>
        <li
            style="
                overflow: hidden;
                white-space: nowrap;
                text-overflow: ellipsis;
                padding-bottom: 10px;
            "
        > <%= article.title %>
            <ul style='
                font-size: 13px;
                font-weight: normal;
                overflow: hidden;
                white-space: nowrap;
                text-overflow: ellipsis;
            '>
                <%= article.body %>
            </ul>
        </li>
    <% end %>
</ul>

